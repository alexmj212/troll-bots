    "version": "0.2.0",
    "runner": "terminal",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/index.ts"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to server",
            "port": 9229,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}\\dist\\**\\*.js"
            ]
        },
    ]
}